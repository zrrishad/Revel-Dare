<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboad_ActivityFirst"
    android:orientation="vertical"
    android:background="#5D0E0E">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginTop="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reveal"
            android:textSize="30dp"
            android:layout_marginRight="6dp"
            android:textColor="#0ED3D3"
            android:textStyle="bold"></TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dare"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:textColor="#E90721"></TextView>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSli"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="1000"
            app:iss_period="1000"></com.denzcoskun.imageslider.ImageSlider>






    </androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="20"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="10">


    <androidx.cardview.widget.CardView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FF9E80"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEEP"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#000"></TextView>




    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">


        <androidx.cardview.widget.CardView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#8EF218"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COUPLE"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="#000"></TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/button3"
        android:layout_width="158dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#CE65E0"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GOSSIP"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#000"></TextView>


    </androidx.cardview.widget.CardView>



</LinearLayout>

