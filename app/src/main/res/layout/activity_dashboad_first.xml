<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboad_ActivityFirst"
    android:orientation="vertical"
    android:background="@drawable/fist_back4">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_marginTop="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reveal"
            android:textSize="@dimen/_30ssp"
            android:layout_marginRight="6dp"
            android:textColor="#0ED3D3"
            android:textStyle="bold"></TextView>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dare"
            android:textSize="@dimen/_30ssp"
            android:textStyle="bold"
            android:layout_marginLeft="6dp"
            android:textColor="#E90721"></TextView>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSli"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="20"
            app:iss_delay="1000"
            app:iss_period="1000"></com.denzcoskun.imageslider.ImageSlider>






    </androidx.cardview.widget.CardView>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="20"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="10">


    <androidx.cardview.widget.CardView
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#FF9E80"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:lottie_rawRes="@raw/love_2"
            app:lottie_autoPlay="true"
            android:scaleType="centerCrop"
            app:lottie_loop="true"/>

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ADULT QUESTION"
    android:textSize="@dimen/_13ssp"
    android:textColor="#000"
    android:textStyle="bold"
    android:layout_marginTop="@dimen/_6sdp"></TextView>




    </LinearLayout>












</LinearLayout>















    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">


        <androidx.cardview.widget.CardView
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#8EF218"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <com.airbnb.lottie.LottieAnimationView

                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        app:lottie_rawRes="@raw/love_4"
                        app:lottie_autoPlay="true"
                        android:scaleType="centerCrop"
                        app:lottie_loop="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CUPLE QUESTION"
                        android:textSize="@dimen/_13ssp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_4sdp"></TextView>




                </LinearLayout>












            </LinearLayout>

















        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>



    <androidx.cardview.widget.CardView
        android:id="@+id/button3"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#CE65E0"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">






        <LinearLayout
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_150sdp"
                android:orientation="vertical"

                android:layout_gravity="center"
                android:gravity="center">


                <com.airbnb.lottie.LottieAnimationView

                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    app:lottie_rawRes="@raw/love_3"
                    app:lottie_autoPlay="true"
                    android:scaleType="centerCrop"
                    app:lottie_loop="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GOSSIP QUESTION"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_gravity="center"
                    android:gravity="center"></TextView>




            </LinearLayout>












        </LinearLayout>













    </androidx.cardview.widget.CardView>



            <LinearLayout
                android:id="@+id/adContainerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:orientation="vertical"

                ></LinearLayout>


        </LinearLayout>

    </ScrollView>




</LinearLayout>

